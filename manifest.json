{
  "manifest_version": 2,
  "name": "YouTube Shunt",
  "version": "1.1.1",
  "description": "Ouvrir les vidéos YouTube dans Invidious ou Piped",
  "author": "YoutubeShunt",
  "permissions": [
    "activeTab",
    "storage",
    "*://*.youtube.com/*",
    "*://youtube.com/*"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon-48.png",
      "96": "icons/icon-96.png"
    },
    "default_title": "YouTube Shunt - Paramètres"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*",
        "*://youtube.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "youtube-shunt-private@extension.local",
      "strict_min_version": "120.0",
      "data_collection_permissions": {
        "required": [
          "none"
        ]
      }
    }
  }
}